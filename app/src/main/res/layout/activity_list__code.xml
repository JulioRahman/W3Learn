<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/ScrollView1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".learn.List_Code"
    android:background="#F4F4F4">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="#F4F4F4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Subject"
                android:textSize="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="22dp"
                android:fontFamily="@font/montserratmediumxml"/>

            <TextView
                android:id="@+id/mtitle"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="This Is The Description Of The Learn Subject Of HTML or CSS like background and etc will shown here"
                android:textSize="14dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/montserratregulerxml"/>

        </LinearLayout>

        <TextView
            android:id="@+id/mdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Description Of The Text"
            android:textSize="13dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/montserratregulerxml"/>

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:shape_roundRect_topRightRadius="8dp"
            app:shape_roundRect_topLeftRadius="8dp"
            app:shape_roundRect_bottomLeftRadius="8dp"
            app:shape_roundRect_bottomRightRadius="8dp">

            <com.pddstudio.highlightjs.HighlightJsView
                android:id="@+id/code_view"
                android:layout_width="match_parent"
                android:layout_height="400dp" />
        </com.github.florent37.shapeofview.shapes.RoundRectView>

    </LinearLayout>
</ScrollView>