<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/creatorlist"
        android:scaleX="0.88"
        android:scaleY="0.88"
        android:orientation="vertical"
        android:layout_width="130dp"
        android:layout_marginRight="12dp"
        android:background="#00ffffff"
        android:layout_height="210dp">

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:shape_roundRect_topLeftRadius="12dp"
            app:shape_roundRect_topRightRadius="12dp"
            app:shape_roundRect_bottomLeftRadius="12dp"
            app:shape_roundRect_bottomRightRadius="12dp">

            <ImageView
                android:id="@+id/creatorpic"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:scaleType="fitXY"
                android:src="@drawable/picone" />
        </com.github.florent37.shapeofview.shapes.RoundRectView>

        <TextView
            android:fontFamily="@font/montserratmedium"
            android:id="@+id/creatorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:lineSpacingExtra="8dp"
            android:text="Shidiq Bagus Ardi Prastian"
            android:textColor="#fff"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/creatorsjobbg"
            android:alpha="0"
            android:layout_marginTop="-8dp"
            android:padding="10dp"
            android:layout_marginLeft="-10dp"
            android:background="@drawable/bluestroke"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/creatorjob"
                android:fontFamily="@font/montserratregular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UI/UX Designer"
                android:textColor="#28E4FF"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>